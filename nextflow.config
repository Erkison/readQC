
process {
    withName: FASTQC {
        conda = "${baseDir}/conda_environments/fastqc_multiqc.yml"
    }
    withName: MULTIQC {
        conda = "${baseDir}/conda_environments/fastqc_multiqc.yml"
    }
}

profiles {
    standard {
        includeConfig 'base.config'
        conda.enabled = true
        executor {
            name = 'slurm'
            queueSize = 200
            pollInterval = '10 sec'
            queueStatInterval = '10m'
        }
        process {
            executor = 'slurm'
            stageInMode = 'symlink'
            errorStrategy = 'retry'
            maxRetries = 3
            cache = 'lenient'
            beforeScript = 'module load miniconda3'
            clusterOptions = {
                qos = task.time <= 30.minutes ? 'shortq' : 'normal'
                partition = task.time <= 30.minutes ? 'short,comp' : 'comp'
                return "--qos=${qos} --partition=${partition}"
            }
        }
    }
    local {
        process.executor = 'local'
        includeConfig 'base.config'
        conda.enabled = true
    }
}